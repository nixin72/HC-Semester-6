@using RAC.RACModels
@model CandidateHomeViewModel
@{
    ViewBag.Title = "Notification";
}
@if (Model.Notifications.Count > 0)
{
    <table class="table table-striped table-responsive">
        <tr>
            <th>
                <p>Date:</p>
            </th>
            <th>
                <p>Description:</p>
            </th>
            <th>
                <p>Action:</p>
            </th>
        </tr>
        <tbody>
        @foreach (var notification in Model.Notifications)
        {
            <tr>
                <td>@String.Format("{0:MMMM d, yyyy - hh:mm tt}", @notification.Date)</td>
                @switch (notification.NotificationType)
                {
                    case (short)Messages.RAC_ADVISOR_UPLOAD_TO_CANDIDATE:
                        <td><span class='text-info glyphicon glyphicon-upload' aria-label="Document Uploaded"></span> <strong class='text-info'>@notification.Description</strong></td>
                        break;

                }
                <td><a id='@notification.Id' href='#' class='removeNotification'><span class="text-danger glyphicon glyphicon-remove" aria-hidden="true"></span>&nbsp;Remove</a></td>
            </tr>
        }

        </tbody>



    </table>

}
else
{
    <h4>There are no new notifications to display</h4>
}
